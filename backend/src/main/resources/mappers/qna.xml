<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.vue.mapper.QnaMapper">
	<!-- 05.18 15:26 sql은 dto 만들고 모두 다 수정해야함 -->
	<!-- 게시글 전체 조회 -->
	<select id="selectQna"  resultType="QnaDto">
		select *
		from qna 
		order by qnano desc
		<if test="userid">
            and userid = #{userid}
         </if>
	</select>
	
	<!-- 게시글 상세 조회 -->
	<select id="selectQnaByNo" resultType="QnaDto">
		select *
		from qna 
		where qnano = #{qnano}
	</select>

	
	<!--  게시글 조회 -->
	<sql id="search">
	
	<trim prefixOverrides="AND">
		<if test="comment!=null and comment!=''">
            and subject like concat('%', #{content}, '%')
         </if>
		<if test="userid!=null and userid!=''">
            and userid = #{userid}
         </if>
	</trim>
   </sql>
	
	
   <select id="selectQnaByName" parameterType="map" resultType="QnaDto">
      select *
      from qna
      <where>
      <include refid="search"></include>
      </where>
      order by qnano desc
      limit #{start}, #{spp}
   </select>
	
	<!-- 게시글 등록 -->
	<insert id="insertQna" parameterType="QnaDto">
		insert into qna(
			subject, userid, content
		) values (
			#{subject}, #{userid}, #{content}
		)
	</insert>
	
	<!-- 관리자 답변 추가 -->
	<update id="insertComment" parameterType="QnaDto">
		update qna 
		   set commentid = #{commentid}, 
		   	   comment = #{comment}
		 where qnano = #{qnano}
	</update>
	
	<!-- 게시글 수정 -->
	<update id="updateQna" parameterType="QnaDto">
		update qna 
		   set subject = #{subject}, 
		   	   userid = #{userid}, 
		   	   content = #{content}
		 where qnano = #{qnano}
	</update>
	
	<!-- 조회수 -->
	<update id="updateHit" parameterType="int">
		update qna 
		   set hit = hit+1
		 where qnano = #{qnano}
	</update>

	<!-- 게시글 삭제 -->
	<delete id="deleteQna" parameterType="int">
		delete 
		from qna 
		where qnano = #{qnano}
	</delete>
	
	<!--  페이지 이동 위한 것 -->
	<select id="getTotalCount" parameterType="map" resultType="int">
      select count(qnano)
      from qna
      <where>
         <include refid="search"></include>
      </where>
   </select>

</mapper>

